{
  "version": "1.0.0",
  "name": "Fbpage-Without-Login",
  "description": "Don't bother me browsering page on Facebook.",

  "applications": {
    "gecko": {
      "id": "@page_no_login",
      "strict_min_version": "48.0"
    }
  },

  "content_scripts": [
    {
      "matches": [
        "http://www.facebook.com/*",
        "https://www.facebook.com/*"
      ],
      "css": ["hide-fb.css"]
    }
  ],

  "permissions": [
    "https://www.facebook.com/*",
    "http://www.facebook.com/*"
  ],

  "manifest_version": 2
}
